---
import { Background } from "portfolio-ui";

import { Footer } from "../components/parts/footer";
import { Nav } from "../components/parts/nav";

import {
  layoutParentStyle,
  layoutStyle,
  layoutBgStyle,
  layoutContentStyle,
} from "./layout.css";
---

<div class={layoutParentStyle}>
  <div class={layoutStyle}>
    <Nav />
    <Background
      classNameForBg={layoutBgStyle}
      color="mono.50"
      layoutPosition="absolute"
    >
      <div class={layoutContentStyle}>
        <slot />
      </div>
    </Background>
    <Footer useCC={true} />
  </div>
</div>
